<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        android:visibility="visible"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:id="@+id/lay_rel_list_view_items"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_header_list_view_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dispur Medical"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/txt_sub_header_list_view_details"
            android:layout_below="@id/txt_header_list_view_details"
            android:textSize="12sp"
            android:paddingBottom="10dp"
            android:text="+919876556783"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_call_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <View
            android:layout_below="@id/txt_sub_header_list_view_details"
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />
    </RelativeLayout>