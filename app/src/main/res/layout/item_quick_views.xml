<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_quick_view_items"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_width="180dp"
        android:layout_height="100dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ic_title_quick_view"
            android:src="@drawable/ic_error_black_24dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/txt_title_quick_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nearby_red_zone"
            android:textSize="18sp"
            android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/place_name_quick_view_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="Ath Gaon Masjit"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>