<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/lay_coo_main_wo_drawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="#0097A7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_Tool_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="30dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/btn_nav_toolbar"
                    android:clickable="true"
                    android:layout_centerVertical="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_menu_black_24dp"
                    android:layout_marginStart="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"/>


                <TextView
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/app_name"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/img_user_main"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_avatar" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        </LinearLayout>
        <com.ventricles.incovid.customScroll
            android:layout_width="match_parent"
            android:id="@+id/scroll_main"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

                <RelativeLayout
                    android:id="@+id/top_section_main"
                    android:background="#0097A7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_title_desc"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        app:cardBackgroundColor="#90DF3D"
                        app:cardCornerRadius="10dp">

                        <TextView
                            android:id="@+id/txt_safe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/you_re_safe"
                            android:textColor="#FFFFFF"
                            android:textSize="20pt"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@id/card_title_desc"
                        android:id="@+id/layQuickBtns"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:cardCornerRadius="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <Button
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:id="@+id/btnDoctorAppoinment"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:background="?attr/selectableItemBackground"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Doctor Appointment"/>

                            </LinearLayout>
                            <View
                                android:id="@+id/divider4"
                                android:layout_width="1dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.001"
                                android:background="?android:attr/listDivider" />

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <Button
                                    android:id="@+id/btnCounselingService"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:background="?attr/selectableItemBackground"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Counselling Service"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/covidStatus"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="#ffffff"
                        android:layout_below="@id/layQuickBtns"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <TextView
                                    android:text="@string/redzone"
                                    android:textColor="#000"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/redzoneTotalValue"
                                    android:text="..."
                                    android:textColor="#000"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <TextView
                                    android:textColor="#000"
                                    android:text="@string/active_case"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/activeCaseValue"
                                    android:text="..."
                                    android:textColor="#000"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <TextView
                                    android:text="@string/death"
                                    android:textColor="#000"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:text="..."
                                    android:id="@+id/deathTotalValue"
                                    android:textColor="#000"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_quick_btns"
                        android:layout_margin="10dp"
                        android:layout_below="@id/covidStatus"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"/>
                    <ProgressBar
                        android:id="@+id/progress_redzone"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/covidStatus"
                        android:layout_marginTop="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_map_main"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_below="@id/top_section_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include
                        layout="@layout/activity_maps"
                        android:layout_width="match_parent"
                        android:id="@+id/frame_for_map_main"
                        android:layout_height="180dp"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:id="@+id/lay_btns_below"
                    android:layout_below="@id/card_map_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="2dp"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="70dp">
                        <LinearLayout
                            android:id="@+id/card_btn_travel"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:background="#FA4545"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:textColor="#ffffff"
                                android:gravity="center"
                                android:text="@string/travel"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="2dp"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="70dp">
                        <LinearLayout
                            android:id="@+id/card_btn_more"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:background="#42A5F5"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/txt_travel_swipe_btn"
                                android:textColor="#FFFFFF"
                                android:gravity="center"
                                android:text="@string/more"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            </RelativeLayout>
        </com.ventricles.incovid.customScroll>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>