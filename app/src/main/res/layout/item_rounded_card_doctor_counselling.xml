<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:minHeight="250dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textIsSelectable="true"
                android:id="@+id/txtTitleDoctorCounselling"
                android:text="Dr. TS Kler"
                android:textColor="#000"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtSubTitleDoctorCounselling"
                android:text="Specialisation: heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:enabled="true"
                android:focusable="true"
                android:longClickable="true"
                android:textIsSelectable="true"
                android:id="@+id/txtMoreDoctorCounselling"
                android:layout_marginTop="20dp"
                android:textColor="#000"
                android:textSize="18sp"
                android:text="Available for online appointments and for emergency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>